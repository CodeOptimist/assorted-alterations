<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <RecipeDef Name="COAA_ButcherCorpseFleshBase" Abstract="True">
    <workAmount>450</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
    <fixedIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowCorpsesColonist</li>
      </specialFiltersToDisallow>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherSmallCreatureFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherAnimalFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesAnimal</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesInsect</li>
      </disallowedCategories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherInsectFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesInsect</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherHumanFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherAnimalInsectFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesAnimal</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherAnimalHumanFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesAnimal</li>
        <li>CorpsesHumanlike</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesInsect</li>
      </disallowedCategories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="COAA_ButcherCorpseFleshBase">
    <defName>COAA_ButcherInsectHumanFlesh</defName>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesInsect</li>
        <li>CorpsesHumanlike</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>
</Defs>